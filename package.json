{
	"name": "svelte-sqlite",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"prebuild": "copy-folder src/styles/ static/styles/ && copy-folder src/fonts/ static/fonts/",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"db:push": "drizzle-kit push --config=src/lib/server/db/drizzle.config.ts",
		"db:generate-migrations": "drizzle-kit generate --config=src/lib/server/db/drizzle.config.ts",
		"db:migrate": "tsx src/lib/server/db/migrate.ts",
		"db:studio": "drizzle-kit studio --config=src/lib/server/db/drizzle.config.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/better-sqlite3": "^7.6.12",
		"drizzle-kit": "^0.30.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-loading-spinners": "^0.3.6",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.5",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@calumk/editorjs-columns": "^0.3.2",
		"@editorjs/editorjs": "^2.31.0",
		"@editorjs/header": "^2.8.8",
		"@editorjs/image": "^2.10.3",
		"@editorjs/list": "^2.0.9",
		"@editorjs/paragraph": "^2.11.7",
		"@editorjs/quote": "^2.7.6",
		"@ikbenbas/editorjs-button": "^1.0.0",
		"@lucide/svelte": "^0.503.0",
		"@oslojs/crypto": "^1.0.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"better-sqlite3": "^11.8.0",
		"copy-folder-util": "^1.2.0",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.40.0",
		"editorjs-collapsible-block": "^1.0.1",
		"sharp": "^0.34.5"
	}
}
