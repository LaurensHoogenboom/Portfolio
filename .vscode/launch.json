	"version": "0.2.0",
	"configurations": [
		{
			"command": "npm run dev",
			"name": "Run server",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"type": "chrome",
			"name": "Run client",
			"request": "launch",
			"url": "http://localhost:5173",
			"webRoot": "${workspaceFolder}"
		}
	],
	"compounds": [
		{
			"name": "SvelteKit: Debug on Chrome",
			"configurations": ["Run server", "Run client"]
		}
	]
}